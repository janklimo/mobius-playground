<div class="container">
  <% if flash.present? %>
    <% flash.each do |name, message| %>
      <div class="alert alert-<%= flash_alert_class(name) %> alert-dismissible fade show">
        <button class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
</div>
