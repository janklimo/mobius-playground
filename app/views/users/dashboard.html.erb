<div class="container">
  <div class="credits">
    <span class="intro">Your available credits</span>
    <h1 class="display-4">
      <%= number_with_precision @user.num_credits, precision: 2 %>
    </h1>
  </div>

  <h3>Users</h3>

  <table class="table table-hover users-table">
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Credits</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @users %>
    </tbody>
  </table>

  <h3>Recent transactions</h3>

  <table class="table table-hover transactions-table">
    <thead>
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Date</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'transaction', collection: @transactions,
           as: :transaction, locals: { user: @user} %>
    </tbody>
  </table>
</div>
